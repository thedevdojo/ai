{
    "name": "devdojo/ai",
    "description": "This is a package that simplifies communicating with AI services using PrismPHP",
    "keywords": [
        "devdojo",
        "ai"
    ],
    "homepage": "https://github.com/devdojo/ai",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Tony Lea",
            "email": "tony@devdojo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Devdojo\\Ai\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Devdojo\\Ai\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Devdojo\\Ai\\AiServiceProvider"
            ],
            "aliases": {
                "Ai": "Devdojo\\Ai\\AiFacade"
            }
        }
    }
}
